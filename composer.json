{
    "name": "scolmore/inriver",
    "description": "A Laravel package for interacting with the inRiver PIM API",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Loft",
            "email": "sam@scolmore.com",
            "homepage": "https://scolmore.com"
        }
    ],
    "homepage": "https://github.com/scolmore/inriver-laravel",
    "keywords": [
        "Laravel",
        "InRiver"
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "~10"
    },
    "autoload": {
        "psr-4": {
            "Scolmore\\InRiver\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Scolmore\\InRiver\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Scolmore\\InRiver\\InRiverServiceProvider"
            ],
            "aliases": {
                "InRiver": "Scolmore\\InRiver\\Facades\\InRiver"
            }
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.32",
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.21"
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "pint": "vendor/bin/pint",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/pint"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}